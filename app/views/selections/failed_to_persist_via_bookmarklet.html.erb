(function() {
  var updateMsg = function() {
    var el = document.querySelector('#ringo-bookmarklet-message-content');
    var html = "Sorry, can't save this page right now. Please try again later.";
    el.innerHTML = html;
  };
  updateMsg();

  var hide = function() {
    var el = document.querySelector('#ringo_bookmarklet_container');
    el.classList.add('hidden');
    setTimeout(function() {
      el.remove();
    }, 3000);
  };
  setTimeout(hide, 10000);
})();
