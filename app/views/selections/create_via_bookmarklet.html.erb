<%= bookmarklet_stylesheet_link_tag "bookmarklet" %>

<p id="ringo-bookmarklet-message">
  <span>
    <span id="ringo-bookmarklet-message-content"> Saving to Ringo...</span>
  </span>
</p>

<script type="text/javascript">
  (function() {
    var uri = '<%= @uri %>',
        selection = window.getSelection ? window.getSelection().toString() : document.selection.createRange().text,
        params = "uri="+uri+"&content="+selection,
        baseUrl = "<%= persist_via_bookmarklet_selections_url %>",
        requestUrl = baseUrl + '?' + params;
    if (!selection) document.location = '<%= root_url %>';
    else ringo_bookmarklet.support.load_script(requestUrl, function() {
      // script loaded
    });
  })();
</script>
